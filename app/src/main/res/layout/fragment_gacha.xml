<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1.3">
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <Button
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:id="@+id/btn_gachaall"
                android:text="通常ガチャ"
                />
            <Button
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:id="@+id/btn_gachaoriginal"
                android:text="オリガチャ"
                />

        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <Button
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:id="@+id/btn_gachab4"
                android:text="B4ガチャ"
                />
            <Button
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:id="@+id/btn_gacham1"
                android:text="M1ガチャ"
                />
            <Button
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:id="@+id/btn_gacham2"
                android:text="M2ガチャ"
                />
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <Button
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:id="@+id/btn_gachanormal"
                android:text="Nガチャ"
                />
            <Button
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:id="@+id/btn_gachaseacret"
                android:text="Sガチャ"
                />
            <Button
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:id="@+id/btn_gachapublic"
                android:text="Pガチャ"
                />
        </TableRow>
    </TableLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="2.8"
        android:layout_marginBottom="2dip"
        android:orientation="horizontal" >
        <android.widget.Button
            android:id="@+id/btn_b4"
            android:layout_width="match_parent"
            android:layout_weight="01"
            android:text="B4"
            android:textColor="@drawable/button_text"
            android:textStyle="bold"
            android:background="@drawable/button_state"
            android:layout_height="match_parent" />
        <android.widget.Button
            android:id="@+id/btn_m1"
            android:layout_width="match_parent"
            android:layout_weight="01"
            android:text="M1"
            android:textColor="@drawable/button_text"
            android:textStyle="bold"
            android:background="@drawable/button_state"
            android:layout_height="match_parent" />
        <android.widget.Button
            android:id="@+id/btn_m2"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:text="M2"
            android:textColor="@drawable/button_text"
            android:textStyle="bold"
            android:background="@drawable/button_state"
            android:layout_height="match_parent" />
    </LinearLayout>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerView_cards"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:scrollbars="horizontal" />

</LinearLayout>